@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WorkCalendarik.Domain.ViewModels.LogAndReg
@model dynamic

<div id="logregFormID" style="display: none;">
    <div class="container-log-reg">
        <div class="block-container">
            <div class="block">
                <section class="block_item block-item">
                    <h2 class="block-item_title">У вас уже есть аккаунт?</h2>
                    <button class="block-item_btn signin-btn">Войти</button>
                </section>

                <section class="block_item block-item">
                    <h2 class="block-item_title">У вас ещё нет аккаунта?</h2>
                    <button class="block-item_btn signup-btn">Зарегистрироваться</button>
                </section>
            </div>
        </div>

        <div class="form-box">
            <form class="form form_signin">
                <h3 class="form_title">Вход</h3>
                <label>
                    <input type="text" placeholder="Почта" id="signin_email" name="email"/>
                </label>
                <label>
                    <input type="password" placeholder="Пароль" id="signin_password" name="password"/>
                </label>
                <div class="form-btn form_btn_signin">Войти</div>
                <a class="google">
                    <img src="~/images/google.png" class="google-img"/>
                </a>
                <div id="error-messages-signin"></div>
            </form>

            <form class="form form_signup">
                <h3 class="form_title">Регистрация</h3>
                <label>
                    <input type="text" placeholder="Логин" id="signup_login" name="login"/>
                </label>
                <label>
                    <input type="text" placeholder="Почта" id="signup_email" name="email"/>
                </label>
                <label>
                    <input type="password" placeholder="Пароль" id="signup_password" name="password"/>
                </label>
                <label>
                    <input type="password" placeholder="Подтвердите пароль" id="confirm_password" name="passwordConfirm"/>
                </label>
                <div class="form-btn form_btn_signup">Зарегистрироваться</div>
                <div id="error-messages-signup"></div>
            </form>
        </div>

    </div>
    <div class="overlay" style="display: none;">
    </div>
</div>